{
    "name": "hochstrasserio/wirecard",
    "description": "A modern client for the Wirecard payment gateway",
    "keywords": [
        "hochstrasserio",
        "wirecard"
    ],
    "homepage": "https://github.com/hochstrasserio/wirecard",
    "license": "MIT",
    "authors": [
        {
            "name": "Christoph Hochstrasser",
            "email": "christoph@hochstrasser.io",
            "homepage": "https://www.hochstrasser.io",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=5.4.0",
        "guzzlehttp/psr7": "^1.0.0"
    },
    "require-dev": {
        "phpunit/phpunit": "4.*",
        "guzzlehttp/guzzle": "^6.0.0",
        "egeloen/http-adapter": "~0.8.0@dev"
    },
    "suggest": {
        "php-http/httplug": "Adapters to existing HTTP clients",
        "sebastian/money": "Robust handling of money amounts"
    },
    "autoload": {
        "psr-4": {
            "Hochstrasser\\Wirecard\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Hochstrasser\\Wirecard\\Test\\": ["tests/unit", "tests/functional"]
        }
    },
    "scripts": {
        "test": "phpunit"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.2-dev"
        }
    }
}
